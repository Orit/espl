 

PROGNAME=invert

all: start

start:    invert.o
	gcc -g invert.o -ansi -m32 -Wall -o $(PROGNAME)

invert.o:    invert.c
	gcc -g -ansi -m32 -Wall -c -nostdlib -fno-stack-protector invert.c -o invert.o

#tell make that "clean" is not a file name!
.PHONY : clean

#clean the build directory
clean : 
    rm $(PROGNAME) invert.o

memcheck:
    valgrind --leak-check=yes --track-origins=yes ./$(PROGNAME)

PROGRAM= prsym
.PHONY: all clean dist


all: start

OBJS=font.o

start:    prsym.o $(OBJS)
	gcc -g prsym.o -Wall-o $(PROGNAME)
	
prsym.o:    prsym.c
	gcc -g -O -Wall -c  prsym.c -o prsym.o

clean:
	rm -f *.o *~

dist:
	(cd ..; zip ascart/ascart.zip ascart/font.c ascart/font.h ascart/prsym.c)
